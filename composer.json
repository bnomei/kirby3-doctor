{
    "name": "bnomei/kirby3-doctor",
    "type": "kirby-plugin",
    "version": "1.5.0",
    "description": "Kirby 3 Plugin to check health of your CMS installation.",
    "license": "MIT",
    "authors": [
        {
            "name": "Bruno Meilick",
            "email": "b@bnomei.com"
        }
    ],
    "keywords": [
        "kirby3",
        "kirby3-cms",
        "kirby3-plugin",
        "system",
        "doctor",
        "check",
        "health",
        "audit",
        "security",
        "installation"
    ],
    "autoload": {
        "psr-4": {
            "Bnomei\\": "classes/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "require": {
        "php": ">=7.3.0",
        "getkirby/composer-installer": "^1.2",
        "sensiolabs/security-checker": "^6.0",
        "zendframework/zenddiagnostics": "^1.6"
    },
    "scripts": {
        "build": [
            "yarn",
            "npx kirbyup src/index.js"
        ],
        "analyze": "phpstan analyse classes",
        "fix": "php-cs-fixer fix",
        "test": [
            "mkdir -p tests/logs",
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --configuration ./phpunit.xml"
        ],
        "dist": [
            "composer install --no-dev --optimize-autoloader",
            "git rm -rf --cached .; git add .;"
        ]
    },
    "require-dev": {
        "getkirby/cms": "^3.6.0-rc.1",
        "php-coveralls/php-coveralls": "^2.1",
        "phpunit/phpunit": "^9.5"
    },
    "extra": {
        "kirby-cms-path": "tests/kirby"
    },
    "suggest": {
        "bnomei/kirby3-security-headers": "CPS headers to make the the web a saver place. Sensible defaults with zero configuration.",
        "bnomei/kirby3-robots-txt": "Automatic robots.txt. Detects xmlsitemap.",
        "omz13/kirby3-xmlsitemap": "Adds a xml sitemap"
    }
}
